@model List<Movie>


<div class="text-center">
    <h1 class="display-4">Peliculas</h1>
    <p>Mira los detalles de tus peliculas favoritas cuando quieras</a>.</p>
</div>
<div>
    <ul class="list-group mb-3 border" style="border: 2px solid #060606;">
        @foreach (var item in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <p class="text-decoration-none font-weight-bold text-dark fs-5">@item.Name</p>
                <div>
                    <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@item.Code">Detalle</a>
                    <a class="btn btn-primary btn-sm mr-2" asp-action="Edit" asp-route-id="@item.Code">Editar</a>                    
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Code">Eliminar</a>                
                </div>
            </li>
        }
    </ul>

    <div class="text-left mt-3">
